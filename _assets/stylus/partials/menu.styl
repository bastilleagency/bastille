.menu
  absolute right 0 top rem-calc(-20px)
  padding rem-calc(20px)
  background $white
  opacity 0
  z-index 1
  transform scaleY(.7)
  +below($tablet)
    width 100%
    height calc(100vh - 40px)
    padding rem-calc(60) rem-calc(20)

  &:not(.menu--is-open)
    z-index -99

  &__list
    grid()

  &__item
    cell(1,3)
    padding 0 rem-calc(10px)
    min-width rem-calc(175px)
    +below($desktop)
      cell(1,3,g:40px)
    +below($tablet)
      cell(1,1)
      padding rem-calc(6px)
      text-align center

  &__sub-item
    a
      font-size rem-calc(14px)
      color $gray
      display inline-block
      margin-bottom 4px
      &:hover
        color $blue

  &__heading
    color $black
    display block
    font-size rem-calc(22px)
    font-weight 600
    margin-bottom rem-calc(10px)
